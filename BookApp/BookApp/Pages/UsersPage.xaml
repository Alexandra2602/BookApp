<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookApp.Pages.UsersPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add user" Clicked="AddUserClicked"/>
    </ContentPage.ToolbarItems>
    <ListView x:Name="userslistview" Margin="20" ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding LastName}"/>
                
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>